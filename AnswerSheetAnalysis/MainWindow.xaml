<Window x:Class="AnswerSheetAnalysis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Answer Sheet Analysis" Height="200" Width="300" AllowDrop="True" Drop="Window_Drop">
    <Grid>
        <StackPanel VerticalAlignment="Center" Orientation="Vertical">
            <Button x:Name="BtnOpenAnswerSheet" Content="Open Answer Sheet" Margin="10" Click="BtnOpenAnswerSheet_Click"/>
            <Button x:Name="BtnCompareAnswerSheets" Content="Compare Answer Sheets" Margin="10" Click="BtnCompareAnswerSheets_Click"/>
            <Button x:Name="BtnGroupAnswerSheets" Content="Group Answer Sheets" Margin="10" Click="BtnGroupAnswerSheets_Click"/>
        </StackPanel>
    </Grid>
</Window>
